@model Product

<div class="col-lg-4 col-md-6 text-center">
    <div class="single-product-item">
        <div class="product-image">
            <a asp-action="ProductDetail"><img src="~/assets/img/products/@Model.ProductImage" alt=""></a>
        </div>
        <h3>@Model.ProductName</h3>
        <p class="product-price"><span>Per Kg</span> @(Model.ProductPrice)$ </p>
        <a asp-controller="cart" asp-action="index" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
    </div>
</div>

